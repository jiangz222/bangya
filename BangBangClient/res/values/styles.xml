<resources xmlns:android="http://schemas.android.com/apk/res/android">


    
    <style name="MyTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBarStyle</item>
		<item name="android:actionBarSize">45dp</item>
	   <item name="android:actionBarTabTextStyle">@style/MyTabTextStyle</item>
    </style>

    <style name="MyActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:backgroundStacked">@color/background_gray</item>
    </style>

    <style name="MyTabTextStyle" parent="@android:style/style/Widget.Holo.Light.ActionBar.TabText.Inverse">
        <item name="android:textColor">#000000</item>
		<item name="android:textSize">13sp</item>
    </style>
    
	<style name="right_more_chose_textview" >
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>                
    </style>
	<style name="dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:background">@color/background_gray</item>

        <item name="android:textSize">15sp</item>
    </style>
	<style name="seperate_line" >
		<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">1dp</item>
    	<item name="android:background">@color/background_gray</item>
		<item name="android:layout_marginTop">3dp</item>
		<item name="android:layout_marginRight">8dp</item>
		<item name="android:layout_marginBottom">3dp</item>	
    </style>
	<style name="ChattingUISplit">
        <item name="android:textSize">13.0dip</item>
        <item name="android:textColor">#ff56616c</item>
        <item name="android:background">@null</item>
        <item name="android:paddingTop">11.0dip</item>
        <item name="android:paddingBottom">6.0dip</item>
        <item name="android:visibility">visible</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
